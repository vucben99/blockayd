{
  "manifest_version": 3,
  "name": "Blockayd",
  "version": "1.0",
  "description": "Blurs user-defined terms on web pages.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Blur Words"
  },
  "options_page": "options.html"
}
